{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es7",
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2017.object",
      "es2017.sharedmemory",
      "esnext.asynciterable"
      
    ]

  },
  "exclude": [
    "dist",
    "lib",
    "node_modules"

  ]
}
