{
  "name": "nowjs-node-boot",
  "description": "NowCanDo Javascript [nowjs-node-boot] is a  library written by TypeScript code maintains under Apache 2.0 licence",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "debug": "npm run-script build:debug ",
    "build:debug": "npm run-script clean:dist && tsc --p ./tsconfig.debug.json",
    "build:release": "npm run-script clean:build && tsc --p ./tsconfig.release.json",
    "clean": "npm run clean:dist",
    "clean:dist": "rm -rf ./dist/*",
    "clean:build": "rm -rf ./lib/*",
    "test": " jest  --no-cache  ",
    "test:watch": "jest --watch",
    "coverage": " jest  --no-cache --coverage  ",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run lint && npm run test && npm run build:release"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "Saeed Tabrizi at NowCanDo.Com",
  "email": "dev at NowCanDo.Com",
  "license": "Apache-2.0",
  "keywords": [
    "nowjs",
    "nowjslib",
    "nowjs-node-boot",
    "nowcando",
    "Saeed Tabrizi",
    "Typescript",
    "light weight",
    "library",
    "LOB",
    "line of business",
    ""
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "verbose": true,
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/lib/",
      "/dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "bugs": {
    "url": "https://github.com/nowcando/nowjs-node-boot/issues"
  },
  "homepage": "https://github.com/nowcando/nowjs-node-boot#readme",
  "typescript": {
    "definition": "dist/src/index.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nowcando/nowjs-node-boot.git"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/jest": "^20.0.5",
    "@types/node": "^8.0.17",
    "full-icu": "^1.1.3",
    "jest": "^20.0.4",
    "jest-environment-node-debug": "^2.0.0",
    "ts-jest": "20.0.7",
    "ts-node": "^3.2.1",
    "typescript": "^2.4.2"
  }
}
