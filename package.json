{
  "name": "nowjs-node-boot",
  "description": "NowCanDo Javascript  [nowjs-node-boot] is a  library written by TypeScript code maintains under Apache 2.0 licence",
  "version": "0.9.5",
  "private": false,
  "scripts": {
    "debug": "npm run-script build:debug ",
    "build:test": "npm run-script clean:dist && tsc --p ./tsconfig.test.json",
    "build:debug": "npm run-script clean:dist && tsc --p ./tsconfig.debug.json",
    "build:release": "npm run-script clean:release && tsc --p ./tsconfig.release.json",
    "clean": "npm run clean:dist",
    "clean:dist": "rm -rf ./dist/*",
    "clean:release": "rm -rf ./lib/*",
    "test": "jest  --no-cache --config ./jest.json",
    "test:watch": "jest --watch --config ./jest.json",
    "coverage": " jest  --no-cache --coverage  --config ./jest.json ",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run lint && npm run test && npm run build:release",
    "preversion": "npm test && npm run changelog:update",
    "version": "npm run build:release",
    "postversion": "git push && git push --tags && npm clean:release",
    "release:patch": "npm version patch -m \"Upgrade to %s for patch and some bug fixes.\"",
    "release:minor": "npm version minor -m \"Upgrade to %s for minor enhancments & and bug fixes.\"",
    "release:major": "npm version major -m \"Upgrade to %s for major features and bug fixes.\"",
    "changelog:update" :"github-changes -o nowcando -r nowjs-node-boot --no-merges && git commit -a -m 'updated CHANGELOG.md'"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "author": "Saeed Tabrizi at NowCanDo.Com",
  "email": "dev at NowCanDo.Com",
  "license": "Apache-2.0",
  "keywords": [
    "nowjs",
    "nowjsnodeboot",
    "nowjs-node-boot",
    "nowcando",
    "Saeed Tabrizi",
    "Typescript",
    "light weight",
    "library",
    "LOB",
    "line of business",
    "boot"
  ],
  "bugs": {
    "url": "https://github.com/nowcando/nowjs-node-boot/issues"
  },
  "homepage": "https://github.com/nowcando/nowjs-node-boot#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nowcando/nowjs-node-boot.git"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "inversify": "^4.3.0",
    "nowjs-core": "^0.9.7",
    "nowjs-node-boot": ">=0.9.4",
    "nowjs-node-core": "^0.9.4",
    "reflect-metadata": ">=0.1.10",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/colors": "^1.1.3",
    "@types/inversify": "^2.0.33",
    "@types/jest": ">=20.0.5",
    "@types/node": ">=8.0.17",
    "@types/winston": "^2.3.4",
    "full-icu": ">=1.1.3",
    "jest": ">=20.0.4",
    "jest-environment-node-debug": ">=2.0.0",
    "ts-jest": ">=20.0.7",
    "ts-node": ">=3.2.1",
    "typescript": ">=2.4.2",
    "winston-daily-rotate-file": "^1.4.6"
  }
}
